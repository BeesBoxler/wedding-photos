<% if @photo.new_record? %>
  alert("Failed to upload photo: <%= j @photo.errors.full_messages.join(', ').html_safe %>");
<% else %>
	$('div.photo_preview').each(function (i,n){
		if(!$(n).attr('id')){
			$(this).children('.uploadedImage').css('opacity', '1');
			$(this).children('div.ajax-loader').remove();
			$(this).attr('id', 'photo_preview_<%= @photo.id %>').append("<%= j render(@photo) %>");
			return false;
		}
	});
<% end %>