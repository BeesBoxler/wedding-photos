<h1>Listing photos</h1>

<div id="container">
  <% @photos.each do |photo| %>
    <div class="photo">
      <%= link_to image_tag( photo.image.url(:small) ),
                  photo_path(photo),
                  data: { title: photo.title },
                  rel: "wedding",
                  class: "fancybox fancybox.ajax" %>
      <%= link_to 'Delete', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
      <p>Uploaded by <%= photo.user.name %></p>
    </div>
  <% end %>
</div>