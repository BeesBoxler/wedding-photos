<h1>New photo</h1>

<div id="photos"></div>

<%= form_for Photo.new, html: { multipart: true } do |f| %>
  <%= f.label :image, "Upload photos:" %>
  <%= f.file_field :image, multiple: true, name: "photo[image]" %>
<% end %>

<script id="template-upload" type="text/x-tmpl">
	<div class="upload">
	  <p>{%=o.name%}</p>
	  <div class="progress">
	  	<div class="bar" style="width: 0%"></div>
	  </div>
	</div>
</script>

<%= link_to 'Back', photos_path, class:"back_button button" %>
